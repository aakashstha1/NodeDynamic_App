<div class="container-fluid mt-5" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">Contact Us</h1>
      <p class="text-center fs-4 fw-light sub-heading">We Will Happy To Help You</p>
      <div class="row">
        <div class="col-md-6 col-12 mx-auto">
          <form action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input
                type="number"
                class="form-control"
                id="phone"
                name="phone"
              />
            </div>
            <div class="mb-3">
              <label for="msg" class="form-label">Meaasge</label>
              <input type="text" class="form-control" id="msg" name="msg" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>